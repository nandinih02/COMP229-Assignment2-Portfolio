<!--Add Header-->
 <%- include partials/header.ejs%>
 <!--Add Main Nav-->
  <%- include partials/main_nav.ejs%>

  <main class = "container">
     <div class ="row">
      <div class = "col-md-offset-3 col-md-8">
        <h1><%= title %></h1>
        <br>
        <table class="table table-bordered table-striped table-hover">
         <!--Header Row-->
          <tr>
            <th class="text-center">Name</th>
            <th class="text-center">Number</th>
            <th class="text-center">Email</th>  
          </tr>  

       <!--Repeatable Template Row-->
          <% for(let count = 0; count < ContactsList.length; count++) { %>
          <tr>
              <td class="text-center"><%= ContactsList[count].name %></td>
              <td class="text-center"><%= ContactsList[count].number %></td>
              <td class="text-center"><%= ContactsList[count].email %></td>
              <td class="text-center"><input type="button" id="updateButton" value="Update"></td>
              <td class="text-center"><input type="button" id="deleteButton" value="Delete"></td>

          </tr>
          
          <% } %>
        </table>
      </div>

    </div>
    </main>
     
   
